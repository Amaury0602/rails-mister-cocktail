
<div class="row justify-content-center my-5">
  <div class="col-6">
 <h1>Create new cocktail</h1>
 <%= simple_form_for [@cocktail] do |f| %>
   <%= f.input :name %>
   <%= f.input :photo %>
   <%= f.input :photo_cache, as: :hidden %>
   <%= f.submit "add a cocktail", class: "btn btn-outline-primary btn-lg btn-block text-weight-bold" %>
 <% end %>
  </div>
</div>


